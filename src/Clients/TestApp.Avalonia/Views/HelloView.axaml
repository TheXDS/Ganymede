<UserControl
	xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:TheXDS.Ganymede.ViewModels"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="TheXDS.Ganymede.Views.HelloView">
    <Design.DataContext>
        <viewModels:HelloViewModel/>
    </Design.DataContext>
    <StackPanel>
        <TextBlock>
            Hello <Run Text="{Binding Username}"/>! Welcome.
        </TextBlock>
        <Button Command="{Binding LogoutCommand}">Log out</Button>
        <Button Command="{Binding GreetCommand}">Greet</Button>
        <Button Command="{Binding AskCommand}">Ask</Button>
        <Button Command="{Binding OperationCommand}">Operation</Button>
        <Button Command="{Binding StringInputCommand}">string input</Button>
        <Button Command="{Binding IntegerInputCommand}">int input</Button>
        <Button Command="{Binding DecimalInputCommand}">decimal input</Button>
        <Button Command="{Binding DateTimeInputCommand}">datetime input</Button>
        <Button Command="{Binding BooleanInputCommand}">bool input</Button>
    </StackPanel>
</UserControl>
