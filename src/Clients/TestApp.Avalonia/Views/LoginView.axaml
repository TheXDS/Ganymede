<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:TheXDS.Ganymede.ViewModels"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="TheXDS.Ganymede.Views.LoginView">
    <Design.DataContext>
        <viewModels:LoginViewModel/>
    </Design.DataContext>
    <StackPanel
        MinWidth="150"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <TextBlock Text="{Binding UrlPathSegment}" />
        <TextBox Watermark="Username" UseFloatingWatermark="True" Text="{Binding Username}"/>
        <TextBox Watermark="Password" UseFloatingWatermark="True" Text="{Binding Password}" PasswordChar="â—"/>
        <Button Width="80" Margin="5" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="Login" Command="{Binding LoginCommand}"/>
        <TextBlock Text="{Binding Message}" />
    </StackPanel>
</UserControl>
