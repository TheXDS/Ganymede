	<Style TargetType="{x:Type controls:Int8TextBox}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type controls:Int8TextBox}">
					<DockPanel>
						<UniformGrid Columns="1" Rows="2" DockPanel.Dock="Right" Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}">
							<RepeatButton VerticalContentAlignment="Center" x:Name="PART_increase" BorderBrush="{x:Null}" BorderThickness="0" Background="Transparent">
								<Path Fill="Black" Data="M 0 3 L 6 3 L 3 0 Z"/>
							</RepeatButton>
							<RepeatButton VerticalContentAlignment="Center" x:Name="PART_decrease" BorderBrush="{x:Null}" BorderThickness="0" Background="Transparent">
								<Path Fill="Black" Data="M 0 0 L 3 3 L 6 0 Z"/>
							</RepeatButton>
						</UniformGrid>
                        <controls:TextBoxEx TabIndex="1" Icon="{TemplateBinding Icon}" Label="{TemplateBinding Label}" x:Name="PART_input"/>
					</DockPanel>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
