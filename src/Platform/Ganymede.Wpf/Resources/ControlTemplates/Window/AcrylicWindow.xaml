<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:gnmd="clr-namespace:TheXDS.Ganymede.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Ganymede.Wpf;component/Resources/ControlTemplates/Window/ModernWindow.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style BasedOn="{StaticResource {x:Type gnmd:ModernWindow}}" TargetType="{x:Type gnmd:AcrylicWindow}">
        <Setter Property="Background" Value="#01000000"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="WindowStyle" Value="None"/>
    </Style>
</ResourceDictionary>