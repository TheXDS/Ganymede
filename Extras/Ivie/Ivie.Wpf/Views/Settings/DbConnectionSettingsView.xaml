<UserControl
    x:Class="TheXDS.Ivie.Views.Settings.DbConnectionSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TheXDS.Ivie.Views.Settings"
    xmlns:settings="clr-namespace:TheXDS.Ivie.ViewModels.Settings;assembly=Ivie"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance settings:DbConnectionSettingsViewModel}"
    d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <ComboBox
            ItemsSource="{Binding Configurators, Mode=OneWay}"
            DisplayMemberPath="DisplayName"
            SelectedItem="{Binding Configuration.DataProvider}"/>
    </StackPanel>
</UserControl>
