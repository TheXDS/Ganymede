<gn:AcrylicWindow
    x:Class="TheXDS.Ivie.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:gn="http://schemas.thexds.local/ganymede"
    xmlns:st="clr-namespace:TheXDS.Ivie.Resources.Strings;assembly=Ivie"
    xmlns:vm="clr-namespace:TheXDS.Ivie.ViewModels;assembly=Ivie"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800">
    <gn:AcrylicWindow.TitleBarContent>
        <TextBlock
            Margin="5"
            VerticalAlignment="Center"
            FontSize="16"
            Text="{Binding Navigator.CurrentViewModel.Title, ElementName=vmHost, StringFormat={x:Static st:Common.WindowTitle}}">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" ShadowDepth="0"/>
            </TextBlock.Effect>
        </TextBlock>
    </gn:AcrylicWindow.TitleBarContent>
    <gn:NavigationViewModelHost
        x:Name="vmHost"
        Padding="10"
        VisualResolver="{gn:ProteusCrudBuilder}"
        DialogService="{gn:NavDialogService}"
        Navigator="{gn:NavService}"/>
</gn:AcrylicWindow>
